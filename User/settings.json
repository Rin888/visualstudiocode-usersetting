{
  // ファイル関連
  "files.associations": {
    "*.md": "markdown",
    "*.json.txt": "json",
    "*.yml": "ruby"
  },
  "files.eol": "\n",
  "window.title": "${dirty}${rootName}${separator}${activeEditorMedium}${separator}${appName}",

  // フォント設定
  "editor.fontFamily": "Myrica M,Ricty Diminished Discord,monospace,ＭＳ ゴシック,Osaka-Mono",
  "editor.fontSize": 16,
  "editor.lineHeight": 14,

  // タブ設定
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
//  "editor.renderWhitespace": "boundary", // 半角スペースが全角になるので無効化

  // ミニマップ
  "editor.minimap.enabled": true,
  "editor.minimap.renderCharacters": false,

  // 動作
  "editor.wordWrap": "off",
  "editor.wrappingIndent": "indent",

  // 見た目
  "editor.cursorStyle": "block-outline",
  "editor.renderControlCharacters": true,
  "editor.renderIndentGuides": true,
  "editor.roundedSelection": false,
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorTheme": "Monokai",
  "extensions.ignoreRecommendations": false,

  // ターミナル
  "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\bash.exe",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontSize": 16,

  // https://marketplace.visualstudio.com/items?itemName=s-nlf-fh.glassit
  "glassit.alpha": 230
}
