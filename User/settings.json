{
  "window.title": "${dirty}${rootName}${separator}${activeEditorMedium}${separator}${appName}",

  // ファイル関連
  "files.associations": {
    "*.md": "markdown",
    "*.json.txt": "json",
    "*.yml": "ruby"
  },

  // 改行・エンコード
  "files.eol": "\n",
  "files.autoGuessEncoding": true,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  // フォント設定
  "editor.fontFamily": "Myrica M,Ricty Diminished Discord,monospace,ＭＳ ゴシック,Osaka-Mono",
  "editor.fontSize": 16,
  "editor.lineHeight": 14,

  // タブ設定
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  // "editor.renderWhitespace": "boundary", // 半角スペースが全角になるので無効化

  // ミニマップ
  "editor.minimap.enabled": true,
  "editor.minimap.maxColumn": 60,
  "editor.minimap.showSlider": "always",
  "editor.minimap.renderCharacters": false,

  // 行の折り返し
  "editor.wordWrap": "off",
  "editor.wrappingIndent": "indent",

  // Quick Open
  "workbench.quickOpen.closeOnFocusLost": false,

  // Zen Mode
  "zenMode.fullScreen": false,

  // 開発
  "npm.enableScriptExplorer": true,

  // カーソル
  "editor.cursorStyle": "block-outline",
  "editor.cursorBlinking": "expand",
  "editor.renderControlCharacters": true,
  "editor.renderIndentGuides": true,
  "editor.renderLineHighlight": "all",
  "editor.roundedSelection": false,

  // テーマ
  "workbench.iconTheme": "eq-material-theme-icons-palenight",
  "workbench.colorTheme": "Material Theme Palenight High Contrast",
  "materialTheme.fixIconsRunning": false,
  "extensions.ignoreRecommendations": false,

  // ターミナル
  "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\bash.exe",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.experimentalTextureCachingStrategy": "dynamic",

  // https://marketplace.visualstudio.com/items?itemName=s-nlf-fh.glassit
  "glassit.alpha": 230
}
